{
    "[cpp]": {
        "editor.semanticHighlighting.enabled": true,
        "editor.suggest.insertMode": "replace",
        "editor.wordBasedSuggestions": true
    },
    "[latex]": {
        "vim.insertModeKeyBindings": [
            {
                "before": [
                    "]",
                    "]"
                ],
                "commands": [
                    "latex-workshop.close-env"
                ],
                "silent": true
            }
        ],
        "vim.normalModeKeyBindingsNonRecursive": [
            {
                "after": [
                    "i"
                ],
                "before": [
                    "c",
                    "s",
                    "e"
                ],
                "commands": [
                    "latex-workshop.select-envname"
                ],
                "silent": true
            },
            {
                "before": [
                    "v",
                    "i",
                    "e"
                ],
                "commands": [
                    "latex-workshop.select-envcontent"
                ],
                "silent": true
            },
            {
                "before": [
                    "v",
                    "a",
                    "e"
                ],
                "commands": [
                    "latex-workshop.select-env"
                ],
                "silent": true
            },
            {
                "after": [
                    "F",
                    "\\",
                    "d",
                    "f",
                    "{",
                    "f",
                    "}",
                    "x"
                ],
                "before": [
                    "d",
                    "s",
                    "c"
                ]
            },
            {
                "after": [
                    "F",
                    "\\",
                    "l",
                    "c",
                    "w"
                ],
                "before": [
                    "c",
                    "s",
                    "c"
                ]
            },
            {
                "before": [
                    "t",
                    "s",
                    "$"
                ],
                "commands": [
                    "latex-workshop.toggle-equation-envname"
                ],
                "silent": true
            },
            /* curently not working, may be related to vscode commands issue
            {
                "before": ["d", "s", "e"],
                "commands": [
                    "latex-workshop.select-envname",
                    "editor.action.deleteLines"
                ],
                "silent": true
            }, */
            /*             {
                "before": ["d", "i", "e"],
                "commands": [
                    "latex-workshop.select-envcontent",
                    "editor.action.deleteLines"
                ],
                "silent": true
            }, */
            {
                "before": [
                    "<leader>",
                    "l",
                    "l"
                ],
                "commands": [
                    "latex-workshop.build"
                ],
                "silent": true
            },
            {
                "before": [
                    "<leader>",
                    "l",
                    "k"
                ],
                "commands": [
                    "latex-workshop.kill"
                ]
                // "silent": true
            },
            {
                "before": [
                    "<leader>",
                    "l",
                    "c"
                ],
                "commands": [
                    "latex-workshop.clean"
                ],
                "silent": true
            },
            {
                "after": [
                    "g",
                    "j"
                ],
                "before": [
                    "j"
                ]
            },
            {
                "after": [
                    "g",
                    "k"
                ],
                "before": [
                    "k"
                ]
            }
        ]
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.python",
        "editor.formatOnType": true
    },
    "breadcrumbs.icons": false,
    "C_Cpp.default.cppStandard": "c++20",
    "C_Cpp.default.cStandard": "c17",
    "C_Cpp.default.includePath": [
        "/opt/homebrew/include/eigen3",
        "/opt/homebrew/include"
    ],
    "C_Cpp.intelliSenseEngine": "disabled",
    "cSpell.userWords": [
        "matplotlib",
        "pyplot",
        "sklearn",
        "Tsinghua"
    ],
    "debug.console.fontSize": 16,
    "diffEditor.codeLens": true,
    "diffEditor.diffAlgorithm": "experimental",
    "doxdocgen.file.copyrightTag": [],
    "doxdocgen.generic.authorEmail": "chen-che20@mails.tsinghua.edu.cn",
    "doxdocgen.generic.authorName": "CalaW",
    "doxdocgen.generic.useGitUserEmail": true,
    "doxdocgen.generic.useGitUserName": true,
    "editor.accessibilitySupport": "off",
    "editor.bracketPairColorization.enabled": true,
    "editor.codeLens": false,
    "editor.cursorBlinking": "solid",
    "editor.cursorSmoothCaretAnimation": "on",
    // "editor.fontFamily": "Hack, 思源黑体",
    // "editor.fontFamily": "Hacc Nerd Font Mono, 思源黑体",
    // "editor.fontFamily": "JetBrains Mono, 思源黑体",
    // "editor.fontFamily": "SF Mono, 苹方",
    // "editor.fontFamily": "SF Mono, 思源黑体",
    // "editor.fontFamily": "IBM Plex Mono, 思源黑体",
    // "editor.fontFamily": "MesloLGS Nerd Font Mono, 思源黑体",
    // "editor.fontFamily": "Source Code Pro, 思源黑体",
    // "editor.fontFamily": "思源等宽",
    // "editor.fontFamily": "Menlo, 思源黑体",
    // "editor.fontFamily": "Monaco, 思源黑体",
    // "editor.fontFamily": "JuliaMono",
    // "editor.fontLigatures": "'calt' on, 'zero', 'ss01'",
    // "editor.fontFamily": "Fira Code, 思源黑体",
    // "editor.fontLigatures": true,
    // MONOLISA settings
    // "editor.fontFamily": "MonoLisa, 思源黑体",
    "editor.fontFamily": "MonoLisa, 苹方",
    "editor.fontLigatures": "'calt' on, 'liga' off, 'zero' on, 'ss04' on",
    "editor.fontSize": 17,
    "editor.fontVariations": true,
    "editor.guides.bracketPairs": true,
    "editor.inlineSuggest.enabled": true,
    // "editor.fontFamily": "MonoLisa, FZYOUHK_508R--GBK1-0",
    "editor.lineHeight": 0,
    "editor.lineNumbers": "relative",
    "editor.minimap.renderCharacters": false,
    "editor.minimap.showSlider": "always",
    "editor.renderWhitespace": "trailing",
    "editor.unicodeHighlight.allowedLocales": {
        "zh-hans": true,
        "zh-hant": true
    },
    // "editor.fontLigatures": "'calt' on, 'liga' off, 'zero' on, 'ss02' on, 'ss04' on",
    // "editor.fontLigatures": "'calt' off, 'liga' off, 'zero' on, 'ss04' on",
    // end MONOLISA settings
    "editor.unicodeHighlight.invisibleCharacters": false,
    "explorer.compactFolders": false,
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1,
        "GitHub.copilot": 2,
        "GitHub.copilot-labs": 2,
        "vscodevim.vim": 1
    },
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 10000,
    "files.insertFinalNewline": true,
    "git.autofetch": true,
    "git.enableCommitSigning": true,
    "github.copilot.enable": {
        "*": true,
        "markdown": true,
        "plaintext": false,
        "yaml": false
    },
    "github.gitProtocol": "ssh",
    "julia.enableTelemetry": false,
    "julia.symbolCacheDownload": true,
    "latex-workshop.bind.enter.key": false,
    "latex-workshop.intellisense.citation.backend": "biblatex",
    "latex-workshop.intellisense.package.extra": [
        "minted",
        "unicode-math",
        "amsmath",
        "amssymb",
        "amsthm",
        "mathtools",
        "siunitx",
        "booktabs",
        "xcolor",
        "hyperref",
        "biblatex"
    ],
    "latex-workshop.latex.autoBuild.run": "never",
    "latex-workshop.latex.autoClean.run": "onFailed",
    "latex-workshop.latex.clean.fileTypes": [
        "*.aux",
        "*.bbl",
        "*.blg",
        "*.idx",
        "*.ind",
        "*.lof",
        "*.lot",
        "*.out",
        "*.toc",
        "*.acn",
        "*.acr",
        "*.alg",
        "*.glg",
        "*.glo",
        "*.gls",
        "*.fls",
        "*.log",
        "*.fdb_latexmk",
        "*.snm",
        "*.synctex(busy)",
        "*.synctex.gz(busy)",
        "*.nav",
        "*.vrb",
        "*.xdv",
        "*.synctex.gz",
        "*.bcf",
        "*.run.xml",
        "_minted-*/**",
        "_minted-*/"
    ],
    "latex-workshop.latex.recipe.default": "lastUsed",
    "latex-workshop.latex.recipes": [
        {
            "name": "XeLaTeX",
            "tools": [
                "latexmk-XeLaTeX"
            ]
        },
        {
            "name": "luaLaTeX",
            "tools": [
                "latexmk-luaLaTeX"
            ]
        },
        {
            "name": "pdfLaTeX",
            "tools": [
                "latexmk-pdfLaTeX"
            ]
        }
    ],
    // "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.latex.tools": [
        {
            "args": [
                "-xelatex",
                "-bibtex",
                "-synctex=1",
                "-shell-escape",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-outdir=%OUTDIR%",
                "%DOCFILE%"
            ],
            "command": "latexmk",
            "env": {},
            "name": "latexmk-XeLaTeX"
        },
        {
            "args": [
                "-lualatex",
                "-bibtex",
                "-synctex=1",
                "-shell-escape",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOCFILE%"
            ],
            "command": "latexmk",
            "env": {},
            "name": "latexmk-luaLaTeX"
        },
        {
            "args": [
                "-pdf",
                "-bibtex",
                "-synctex=1",
                "-shell-escape",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOCFILE%"
            ],
            "command": "latexmk",
            "env": {},
            "name": "latexmk-pdfLaTeX"
        }
    ],
    "latex-workshop.linting.chktex.exec.args": [
        "-wall",
        "-n22",
        "-n30",
        "-e16",
        "-q",
        "-n19"
    ],
    "latex-workshop.linting.lacheck.enabled": true,
    "latex-workshop.texcount.autorun": "onSave",
    "latex-workshop.view.pdf.external.synctex.args": [
        "-r",
        // "-b", //highlight, ugly
        "%LINE%",
        "%PDF%",
        "%TEX%"
    ],
    "latex-workshop.view.pdf.external.synctex.command": "/Applications/Skim.app/Contents/SharedSupport/displayline",
    "latex-workshop.view.pdf.external.viewer.args": [
        "0",
        "%PDF%"
    ],
    "latex-workshop.view.pdf.external.viewer.command": "/Applications/Skim.app/Contents/SharedSupport/displayline",
    "latex-workshop.view.pdf.viewer": "external",
    "omnisharp.useGlobalMono": "always",
    "omnisharp.useModernNet": false,
    "python.defaultInterpreterPath": "/opt/homebrew/bin/python3",
    "redhat.telemetry.enabled": false,
    "scm.alwaysShowActions": true,
    "scm.alwaysShowRepositories": true,
    "security.workspace.trust.untrustedFiles": "open",
    "settingsSync.ignoredSettings": [
        "vim.autoSwitchInputMethod.defaultIM",
        "vim.autoSwitchInputMethod.obtainIMCmd",
        "vim.autoSwitchInputMethod.switchIMCmd",
        "vim.autoSwitchInputMethod.enable"
    ],
    "telemetry.telemetryLevel": "error",
    "terminal.external.osxExec": "Alacritty.app",
    "terminal.integrated.commandsToSkipShell": [
        "language-julia.interrupt"
    ],
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.defaultProfile.osx": "zsh",
    "terminal.integrated.env.osx": {
        "FIG_NEW_SESSION": "1"
    },
    "terminal.integrated.fontFamily": "SFMono Nerd Font Mono",
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.gpuAcceleration": "on",
    "terminal.integrated.showExitAlert": false,
    "todo-tree.general.tags": [
        "BUG",
        "HACK",
        "FIXME",
        "TODO",
        "XXX",
        "KEY POINT",
        "NOTE"
    ],
    "vim.autoSwitchInputMethod.defaultIM": "com.apple.keylayout.ABC",
    "vim.autoSwitchInputMethod.enable": true,
    "vim.autoSwitchInputMethod.obtainIMCmd": "/usr/local/bin/im-select",
    "vim.autoSwitchInputMethod.switchIMCmd": "/usr/local/bin/im-select {im}",
    "vim.enableNeovim": true,
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "after": [
                "g",
                "j"
            ],
            "before": [
                "j"
            ]
        },
        {
            "after": [
                "g",
                "k"
            ],
            "before": [
                "k"
            ]
        }
    ],
    "vim.sneak": true,
    "vim.visualModeKeyBindings": [
        {
            "before": [
                ">"
            ],
            "commands": [
                "editor.action.indentLines"
            ]
        },
        {
            "before": [
                "<"
            ],
            "commands": [
                "editor.action.outdentLines"
            ]
        }
    ],
    "workbench.colorTheme": "Dracula Pro",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "zenMode.hideTabs": false
}
